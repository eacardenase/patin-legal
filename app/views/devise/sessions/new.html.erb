<section class="h-screen w-full bg-gray-800 flex justify-center items-center">
  <div class="p-16">
    <h2 class="text-white font-semibold text-3xl text-center py-5">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field flex flex-col">
        <%= f.label :email, class: "text-white text-lg text-center p-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg text-sm font-semibold" %>
      </div>

      <div class="field flex flex-col">
        <%= f.label :password, class: "text-white text-lg text-center p-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg text-sm font-semibold" %>
      </div>

      <div class="actions py-5 flex justify-center">
        <div class="bg-[#9ff1e5] text-black font-semibold py-2 px-4 rounded-lg">
          <%= f.submit "Log in" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
